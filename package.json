{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "format": "prettier --write \"**/*.{js,json,vue,ts,tsx}\"",
        "prepare": "husky install"
    },
    "devDependencies": {
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1"
    },
    "lint-staged": {
        "*.{js,json,vue,ts,tsx}": "prettier --write"
    }
}

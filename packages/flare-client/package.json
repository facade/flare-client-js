{
    "name": "@flareapp/flare-client",
    "version": "4.0.0",
    "description": "JavaScript client for flareapp.io",
    "homepage": "https://flareapp.io",
    "bugs": {
        "url": "https://github.com/facade/flare-client-js/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/facade/flare-client-js.git"
    },
    "license": "MIT",
    "author": "adriaan@spatie.be",
    "main": "dist/index.cjs.js",
    "module": "dist/index.mjs",
    "browser": "dist/index.min.js",
    "scripts": {
        "dev": "npm run build",
        "build": "npm-run-all --parallel build:*",
        "esbuild": "esbuild src/index.ts --bundle --define:FLARE_JS_CLIENT_VERSION=\\\"$(node -p \"require('./package.json').version\")\\\"",
        "build:main": "npm run esbuild -- --outfile=dist/index.cjs.js --platform=node",
        "build:minified": "npm run esbuild -- --outfile=dist/index.min.js --platform=browser --minify",
        "build:module": "npm run esbuild -- --outfile=dist/index.mjs --platform=neutral --external:error-stack-parser",
        "test": "vitest",
        "typecheck": "tsc"
    },
    "dependencies": {
        "error-stack-parser": "^2.0.2"
    },
    "devDependencies": {
        "esbuild": "^0.19.8",
        "npm-run-all": "^4.1.5",
        "vitest": "^1.0.4"
    },
    "publishConfig": {
        "access": "public"
    }
}

{
    "name": "@flareapp/vue",
    "version": "1.0.0",
    "description": "Vue client for flareapp.io",
    "homepage": "https://flareapp.io",
    "bugs": "https://github.com/facade/flare-client-js/issues",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/facade/flare-client-js.git"
    },
    "license": "MIT",
    "author": "adriaan@spatie.be",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "scripts": {
        "prepublishOnly": "npm run build",
        "build": "tsup src/index.js --format cjs,esm --dts --clean"
    },
    "devDependencies": {
        "@flareapp/js": "file:../js",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3",
        "vue": "^3.0.0"
    },
    "peerDependencies": {
        "@flareapp/js": "^1.0.0-beta",
        "vue": "^2.0.0||^3.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
